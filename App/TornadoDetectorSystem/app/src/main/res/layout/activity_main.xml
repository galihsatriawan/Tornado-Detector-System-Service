<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anton.tornado.detector.system.MainActivity">
    <LinearLayout
        android:id="@+id/cont_variable"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_nomal"
            android:layout_marginRight="@dimen/margin_nomal"
            android:layout_marginLeft="@dimen/margin_nomal"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="@dimen/textJudul"
            android:layout_marginTop="@dimen/margin_nomal"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection Failed"
            android:id="@+id/location"
            android:textSize="@dimen/textSubJudul"
            android:layout_marginBottom="@dimen/margin_nomal"
            android:textAlignment="center"
            />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_nomal"
            android:layout_marginRight="@dimen/margin_nomal"
            android:layout_marginLeft="@dimen/margin_nomal"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wind Speed"
                    android:textSize="@dimen/textJudul"
                    android:layout_marginTop="@dimen/margin_nomal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Failed"
                    android:id="@+id/wind_speed"
                    android:textSize="@dimen/textSubJudul"
                    android:layout_marginBottom="@dimen/margin_nomal"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_nomal"
            android:layout_marginRight="@dimen/margin_nomal"
            android:layout_marginLeft="@dimen/margin_nomal"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:textSize="@dimen/textJudul"
                    android:layout_marginTop="@dimen/margin_nomal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Failed"
                    android:id="@+id/direction"
                    android:textSize="@dimen/textSubJudul"
                    android:layout_marginBottom="@dimen/margin_nomal"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_nomal"
            android:layout_marginRight="@dimen/margin_nomal"
            android:layout_marginLeft="@dimen/margin_nomal"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Raining"
                    android:textSize="@dimen/textJudul"
                    android:layout_marginTop="@dimen/margin_nomal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Failed"
                    android:id="@+id/raining"
                    android:textSize="@dimen/textSubJudul"
                    android:layout_marginBottom="@dimen/margin_nomal"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_nomal"
            android:layout_marginRight="@dimen/margin_nomal"
            android:layout_marginLeft="@dimen/margin_nomal"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moisture"
                    android:textSize="@dimen/textJudul"
                    android:layout_marginTop="@dimen/margin_nomal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Failed"
                    android:id="@+id/moisture"
                    android:textSize="@dimen/textSubJudul"
                    android:layout_marginBottom="@dimen/margin_nomal"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_nomal"
            android:layout_marginRight="@dimen/margin_nomal"
            android:layout_marginLeft="@dimen/margin_nomal"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indication"
                    android:textSize="@dimen/textJudul"
                    android:layout_marginTop="@dimen/margin_nomal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Failed"
                    android:id="@+id/indication"
                    android:textSize="@dimen/textSubJudul"
                    android:layout_marginBottom="@dimen/margin_nomal"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cont_variable">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_refresh"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Refresh"/>
    </RelativeLayout>

</RelativeLayout>
